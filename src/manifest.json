{
  "name": "Textrazor test",
  "version": "1.2",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-128.png"
  },
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": true
  },
  "content_scripts":
  [
    {
      "matches": ["http://*/*","https://*/*"],
      "js":["chrome-extension-async.js", "highlight.js", "index.js"],
      "css": ["inject.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "identity",
    "identity.email",
    "storage",
    "https://*.textrazor.com/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "description":"Find Facebook profile, page and group  Id base on URLs",
  "content_security_policy": "script-src 'self' https://www.google-analytics.com https://ssl.google-analytics.com 'unsafe-eval'; object-src 'self'"
}
